---
import styles from "@styles/Navigation.module.scss";
import HolyText from "./HolyText.astro";

type Props = Record<string, any> & {
  href?: string;
  class?: string;
  name: string;
  iconFilled: string;
  iconOutlined?: string;
  tabIndex?: number;
  isNew?: boolean;
};

const { href, name, iconFilled, iconOutlined, isNew } = Astro.props;

const selected = Astro.url.pathname === href;
---

<a
  href={href}
  data-settings
  data-selected={selected || null}
  data-outlined={iconOutlined !== undefined || null}
  class={styles.entry}
  title={name}
>
  <span class={styles.icon} set:html={iconFilled + (iconOutlined || "")} />
  <HolyText class={styles.name} text={name} />
  {isNew && <span class={styles.new}>new</span>}
</a>
