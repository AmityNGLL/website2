---
import styles from "@styles/Subscriber.module.scss";

// a really simple wrapper wrapper for the prettybanner element
// part of the subscriber css

interface Props {
  error?: string;
  success?: string;
}

const { error, success } = Astro.props;
---

{success && <p class="prettyBanner" data-success set:text={success} />}
{error && <p class="prettyBanner" data-error set:text={error} />}
