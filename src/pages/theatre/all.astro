---
import TheatreCategory from "@components/TheatreCategory.astro";
import categories from "@lib/gameCategories";
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout title="Games">
  {
    Astro.locals.isMainWebsite && (
      <Fragment slot="head">
        <meta name="description" content="Find games on Holy Unblocker." />
      </Fragment>
    )
  }
  <TheatreCategory
    name="All Games"
    showCategory
    category={categories.map((category) => category.id).join(",")}
    placeholder="Search by game name"
  />
</MainLayout>
