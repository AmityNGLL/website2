---
import TheatreCategory from "@components/TheatreCategory.astro";
import { gameCategories } from "@lib/gameCategories";
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout title="Games">
  {
    Astro.locals.isMainWebsite && (
      <Fragment slot="head">
        <meta name="description" content="Find games on Holy Unblocker." />
      </Fragment>
    )
  }
  <TheatreCategory
    name="All Games"
    category={gameCategories.map((category) => category.id)}
    placeholder="Search by game name"
  />
</MainLayout>
