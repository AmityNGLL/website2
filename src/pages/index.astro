---
import MainLayout from "@layouts/MainLayout.astro";
import styles from "@styles/Home.module.scss";
import Underline from "@icons/underline.svg?svgmin";
import themeStyles from "@styles/ThemeElements.module.scss";
import ProxyOmnibox from "@components/ProxyOmnibox";
import ClientAPIs from "@components/ClientAPIs.astro";

// <ProxyOmnibox className={styles.omnibox} layout={layout} />;
---

<MainLayout>
  <Fragment slot="head">
    <title>Holy Unblocker</title>
    <meta
      name="description"
      content="Holy Unblocker is a web proxy service with support for many sites. Unblock websites on Chromebooks at school and work."
    />
  </Fragment>
  <ClientAPIs />
  <main class={styles.main}>
    <div class={styles.title}>
      <h1>
        Ending Internet
        <span class={styles.pretty}>
          Censorship.
          <Underline class={styles.prettyUnderline} />
        </span>
      </h1>
      <h3>Privacy right at your fingertips.</h3>
      <div class={styles.focus}>
        <button
          type="button"
          class:list={[themeStyles.ThemeButton, styles.button]}
          onclick="setNavExpanded(true)"
        >
          Get Started
        </button>
        <ProxyOmnibox searchEngine={Astro.locals.searchEngine} client:load />
      </div>
    </div>
  </main>
</MainLayout>
